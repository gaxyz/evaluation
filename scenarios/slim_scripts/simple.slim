            sim.readFromPopulationFile( "./slim_" + simID + ".txt" );
            // start newly seeded run
            setSeed( rdunif(1,0,asInteger(2^62) - 1 ));

            // re introduce mutation
            target = sample( p1.genomes, 1 );
            target.addNewDrawnMutation( m2, m2_site );
    }
}

